<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="randomappsinc.com.dishtac" >

    <application
        android:name=".Utils.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/DishtacTheme" >
        <activity
            android:name=".Activities.HomepageActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/settings"
            android:name=".Activities.SettingsActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:label="@string/dish_form_label"
            android:name=".Activities.DishFormActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:label="@string/search"
            android:name=".Activities.SearchActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:label="@string/top_restaurants"
            android:name=".Activities.TopLocationsActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:label="@string/random_dish"
            android:name=".Activities.RandomDishActivity"
            android:configChanges="orientation|screenSize">
        </activity>
    </application>
</manifest>
